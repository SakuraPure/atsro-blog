---
// SocialLinks.astro
const socialLinks = [
  { href: '#', label: 'GitHub' },
  { href: '#', label: 'Twitter' },
  { href: '#', label: 'LinkedIn' },
];
---
<div class="metal-card p-6 w-full">
  <ul class="flex justify-around">
    {socialLinks.map(link => (
      <li>
        <a
          href={link.href}
          class="social-link transition-colors duration-300"
          aria-label={link.label}
        >
          {link.label}
        </a>
      </li>
    ))}
  </ul>
</div>

<style>
  div {
    background-color: #111111;
  }
  .social-link {
    color: #CCCCCC;
  }
  .social-link:hover {
    color: #FFFFFF;
  }
</style>