---
// SocialLinks.astro
const socialLinks = [
  { href: '#', label: 'GitHub' },
  { href: '#', label: 'Twitter' },
  { href: '#', label: 'LinkedIn' },
];
---
<div class="metal-card p-6 w-full">
  <ul class="flex justify-around">
    {socialLinks.map(link => (
      <li>
        <a
          href={link.href}
          class="social-link transition-colors duration-300"
          aria-label={link.label}
        >
          {link.label}
        </a>
      </li>
    ))}
  </ul>
</div>

<style>
  .metal-card {
    background-image: url('/blackmetal.jpg');
    background-size: cover;
    background-position: center;
    position: relative;
    isolation: isolate;
  }

  .metal-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: -1;
  }

  .social-link {
    color: #CCCCCC;
  }
  .social-link:hover {
    color: #FFFFFF;
  }
</style>