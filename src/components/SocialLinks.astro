---
// SocialLinks.astro
const socialLinks = [
  { href: '#', label: 'GitHub' },
  { href: '#', label: 'Twitter' },
  { href: '#', label: 'LinkedIn' },
];
---
<div class="bg-card-dark shadow-metal p-6 w-full">
  <ul class="flex justify-around">
    {socialLinks.map(link => (
      <li>
        <a 
          href={link.href} 
          class="text-text-dark-secondary hover:text-text-dark-primary transition-colors duration-300"
          aria-label={link.label}
        >
          {/* Icon placeholder */}
          {link.label} 
        </a>
      </li>
    ))}
  </ul>
</div>