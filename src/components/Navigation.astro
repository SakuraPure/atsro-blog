---
// Navigation.astro
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/archive', label: 'Archive' },
];
---
<nav class="metal-card p-6 w-full">
  <ul class="space-y-4">
    {navItems.map(item => (
      <li>
        <a
          href={item.href}
          class="nav-link transition-colors duration-300"
        >
          {item.label}
        </a>
      </li>
    ))}
  </ul>
</nav>

<style>
  nav {
    background-color: #111111;
  }
  .nav-link {
    color: #CCCCCC;
  }
  .nav-link:hover {
    color: #FFFFFF;
  }
</style>