---
// Navigation.astro
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/archive', label: 'Archive' },
];
---
<nav class="metal-card p-6 w-full">
  <ul class="space-y-4">
    {navItems.map(item => (
      <li>
        <a
          href={item.href}
          class="nav-link transition-colors duration-300"
        >
          {item.label}
        </a>
      </li>
    ))}
  </ul>
</nav>

<style>
  .metal-card {
    background-image: url('/blackmetal.jpg');
    background-size: cover;
    background-position: center;
    position: relative;
    isolation: isolate;
  }

  .metal-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: -1;
  }

  .nav-link {
    color: #CCCCCC;
  }
  .nav-link:hover {
    color: #FFFFFF;
  }
</style>